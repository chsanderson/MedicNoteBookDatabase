@model PatientAppointmentReferral
<div>
    <form method="post" asp-action="">
        <h2>Create Appointment @*@Html.DisplayFor(model => model.CurrentDate, new { @value=DateTime.Today, @readonly="readonly"})*@ @*<input type="" asp-for=""/>*@</h2>
        <div class="col-md-6">
            <div class="form-group">
                <label>Name:</label>
                <div>
                    <span asp-validation-for="Name"></span>
                </div>
                <input type="text" asp-for="Name" />
            </div>
            <div class="form-group">
                <label>Requested Date:</label>
                <div>
                    <span asp-validation-for="RequestedDate"></span>
                </div>
                <input type="date" asp-for="RequestedDate" />
            </div>
            <div class="form-group">
                <label>Requested Time:</label>
                <div>
                    <span asp-validation-for="RequestedTime"></span>
                </div>
                <input type="time" asp-for="RequestedTime" />
            </div>
            <div class="form-group">
                <label>Symptoms:</label>
                <div>
                    <span asp-validation-for="Symptoms"></span>
                </div>
                <textarea asp-for="Symptoms"></textarea>
            </div>
            <div class="form-group">
                <label>Date Of Birth:</label>
                <div>
                    <span asp-validation-for="DOB"></span>
                </div>
                <input type="date" asp-for="DOB" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Street Number:</label>
                <div>
                    <span asp-validation-for="StreetNumber"></span>
                </div>
                <input type="text" asp-for="StreetNumber" />
            </div>
            <div class="form-group">
                <label>Street Name:</label>
                <div>
                    <span asp-validation-for="StreetName"></span>
                </div>
                <input type="text" asp-for="StreetName" />
            </div>
            <div class="form-group">
                <label>County:</label>
                <div>
                    <span asp-validation-for="County"></span>
                </div>
                <input type="text" asp-for="County" />
            </div>
            <div class="form-group">
                <label>Region:</label>
                <div>
                    <span asp-validation-for="Region"></span>
                </div>
                <input type="text" asp-for="Region" />
            </div>
            <div class="form-group">
                <label>Postcode:</label>
                <div>
                    <span asp-validation-for="Postcode"></span>
                </div>
                <input type="text" asp-for="Postcode" />
            </div>
        </div>

        <a asp-action="Index" asp-area="" asp-controller="Appointment">Cancel</a>

        <input type="submit" value="submit" />
    </form>
</div>

