@{
    ViewData["Title"] = "All Appointments";
    if(Context.Session.GetString("Name") != "" || Context.Session.GetString("Name") != null)
    {
        Layout = "../Shared/_LayoutUser.cshtml";
    }
    else
    {
        Layout = "_Layout.cshtml";
    }
}
@model IEnumerable<Appointment>
<div>
    <h2>My Appointment</h2>
    <table>
        <tr>
            <th>Appointment Date And Time</th>
            <th>Symptoms</th>
            <th>Diagnosis</th>
            <th>Patient Name</th>
            <th>Medical Professional</th>
            <th>Appointment Type</th>
            <th>Date of Birth</th>
            <th>Street Number</th>
            <th>Street Name</th>
            <th>County</th>
            <th>Region</th>
            <th>Postcode</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.AppointmentDate</td>
            <td>@item.Symptoms</td>
            <td>@item.Diagnosis</td>
            <td>@item.PatientFullName</td>
            <td>@item.AppointmentMedicalProfessional</td>
            <td>@item.AppointmentType</td>
            <td>@item.DOB.Date.ToShortDateString()</td>
            <td>@item.StreetNumber</td>
            <td>@item.StreetName</td>
            <td>@item.County</td>
            <td>@item.Region</td>
            <td>@item.Postcode</td>
        </tr>
        }
    </table>
</div>