@{
    ViewData["Title"] = "Delete Appointment";
}

@model PatientAppointmentReferral

<div>
    <form method="post" asp-action="DeleteAppointment">
        <h2>Delete Appointment </h2>
        <input type="hidden" asp-for="PatientApplicationReferralID" />
        <input type="hidden" asp-for="Decision" />
        <div class="form-group">
            <label>Name: </label>
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="text" asp-for="Name" readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Requested Date: </label>
            <div>
                <span asp-validation-for="RequestedDate" class="text-danger"></span>
            </div>
            <input type="date" asp-for="RequestedDate"  readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Requested Time: </label>
            <div>
                <span asp-validation-for="RequestedTime" class="text-danger"></span>
            </div>
            <input type="time" asp-for="RequestedTime"  readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Symptoms: </label>
            <div>
                <span asp-validation-for="Symptoms" class="text-danger"></span>
            </div>
            <textarea asp-for="Symptoms" readonly="readonly"></textarea>
        </div>
        <div class="form-group">
            <label>DOB: </label>
            <div>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <input type="date" asp-for="DOB"  readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Street Number: </label>
            <div>
                <span asp-validation-for="StreetNumber" class="text-danger"></span>
            </div>
            <input type="text" asp-for="StreetNumber" />
        </div>
        <div class="form-group">
            <label>Street Name: </label>
            <div>
                <span asp-validation-for="StreetName" class="text-danger"></span>
            </div>
            <input type="text" asp-for="StreetName" readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>County: </label>
            <div>
            </div>
            <input type="text" asp-for="County" readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Region: </label>
            <div>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <input type="text" asp-for="Region" readonly="readonly"/>
        </div>
        <div class="form-group">
            <label>Postcode: </label>
            <div>
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <input type="text" asp-for="Postcode" readonly="readonly"/>
        </div>
        <input type="submit" value="submit" />
    </form>
    <a asp-action="Search" asp-area="" asp-controller="Appointment">Cancel</a>
</div>
